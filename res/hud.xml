<hud name="pony48hud">
	<fonts>
		<font name="cmr" path="res/font/CelestiaMediumRedux.xml" />
	</fonts>
	<images>
		<image name="phones" path="res/intro/headphones.png" />
		<image name="mic" path="res/intro/microphone.png" />
		<image name="pad" path="res/intro/controller.png" />
		<image name="cam" path="res/intro/webcam.png" />
		<image name="yes" path="res/intro/yes.png" />
		<image name="no" path="res/intro/no.png" />
	</images>
	
	<!-- playing HUD -->
	<scene name="playing">
		<textbox name="scorebox" font="cmr" text="SCORE: 0" pos="-5,6" pt="1.5" col="255,255,255,255" />
		<textbox name="hiscorebox" font="cmr" text="BEST: 0" pos="5,6" pt="1.5" col="255,255,255,255" />
	</scene>
	<!-- gameover HUD -->
	<scene name="gameover">
		<geom name="gameovertextbg" col="128,128,128,200">
			<quad p1="-8, 5.5, 0" p2="8, 5.5, 0" p3="8, 1.5, 0" p4="-8, 1.5, 0" />
			<quad p1="-5, -4.5, 0" p2="5, -4.5, 0" p3="5, -5.55, 0" p4="-5, -5.55, 0" />
		</geom>
		<geom name="gameoverdarken" col="128,128,128,100">
			<quad p1="-50, 50, 0" p2="50, 50, 0" p3="50, -50, 0" p4="-50, -50, 0" />
		</geom>
		<textbox name="gameover" font="cmr" text="GAME OVER" pos="0,4" pt="4" col="255,255,255,255" />
		<textbox name="finalscore" font="cmr" text="FINAL SCORE: 0" pos="0,2.25" pt="1.5" col="255,255,255,255" />
		<textbox name="restart" font="cmr" text="Press any key to play again" pos="0,-5" pt="1.0" col="255,255,255,255" />
	</scene>
	<!-- "plug all the stuff in" HUD -->
	<scene name="intro">
		<textbox name="plugitallin" font="cmr" text="PLUG_MSG_STR" pos="0,4" pt="1.25" col="255,255,255,255" />
		<textbox name="retest" font="cmr" text="(Press Spacebar to re-test, any other button to continue as-is)" pos="0,-4.25" pt="0.6" col="255,255,255,255" />
		<bgimage name="phones" img="phones" pos="-1.5,1.5" size="2,2" />
		<bgimage name="mic" img="mic" pos="1.5,1.55" size="2,2" />
		<bgimage name="pad" img="pad" pos="-1.5,-1.5" size="2,2" />
		<bgimage name="cam" img="cam" pos="1.5,-1.5" size="2,2" />
		<bgimage name="yespad" img="yes" pos="-2.25,-2.25" size="0.8,0.8" />
		<bgimage name="nopad" img="no" pos="-2.25,-2.25" size="0.8,0.8" />
		<bgimage name="yescam" img="yes" pos=".75,-2.25" size="0.8,0.8" />
		<bgimage name="nocam" img="no" pos=".75,-2.25" size="0.8,0.8" />
		<geom name="coverintro" col="0,0,0,0">
			<quad p1="-8, 6, 0" p2="8, 6, 0" p3="8, -6, 0" p4="-8, -6, 0" />
		</geom>
	</scene>
	<!-- song selection HUD -->
	<scene name="songselect">
		<textbox name="choosesong" font="cmr" text="Choose a song!" pos="0,4" pt="1.25" />
		<menu name="songmenu" font="cmr" pos="0,0" pt="1" selectpt="1.25" vspacing="0.25" textcol="255,255,255,255" selectcol="255,0,0,255" selectcol2="255,200,200,255" selectsignal="select">
			<menuitem signal="load res/mus/justfluttershy.xml" text="Just... Fluttershy"/>
			<menuitem signal="load res/mus/shyst3pvip.xml" text="ShySt3p [VIP]"/>
		</menu>
	</scene>
</hud>