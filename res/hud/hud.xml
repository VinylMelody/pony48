<hud name="pony48hud">
	<fonts>
		<font name="cmr" path="res/font/CelestiaMediumRedux.xml" />
	</fonts>
	<images>
		<image name="phones" path="res/intro/headphones.png" />
		<image name="mic" path="res/intro/microphone.png" />
		<image name="pad" path="res/intro/controller.png" />
		<image name="cam" path="res/intro/webcam.png" />
		<image name="yes" path="res/intro/yes.png" />
		<image name="no" path="res/intro/no.png" />
	</images>
	
	<!-- playing HUD -->
	<scene name="playing">
		<textbox name="scorebox" font="cmr" text="SCORE: 0" pos="-5,6" pt="1.5" col="255,255,255,255" />
		<textbox name="hiscorebox" font="cmr" text="BEST: 0" pos="5,6" pt="1.5" col="255,255,255,255" />
	</scene>
	<scene name="gameover">
		<geom name="gameovertextbg" col="128,128,128,200">
			<quad p1="-8, 4, 0" p2="8, 4, 0" p3="8, 0, 0" p4="-8, 0, 0" />
			<quad p1="-5.5, -0.25, 0" p2="5.5, -0.25, 0" p3="5.5, -1.75, 0" p4="-5.5, -1.75, 0" />
			<quad p1="-5, -3.5, 0" p2="5, -3.5, 0" p3="5, -4.75, 0" p4="-5, -4.75, 0" />
		</geom>
		<textbox name="gameover" font="cmr" text="GAME OVER" pos="0,2" pt="4" col="255,255,255,255" />
		<textbox name="finalscore" font="cmr" text="FINAL SCORE: 0" pos="0,-1" pt="1.5" col="255,255,255,255" />
		<textbox name="restart" font="cmr" text="Press any key to play again" pos="0,-4" pt="1.0" col="255,255,255,255" />
	</scene>
	<scene name="intro">
		<textbox name="plugitallin" font="cmr" text="Plug in all the things!" pos="0,3.5" pt="1.5" col="255,255,255,255" />
		<textbox name="requiresrestart" font="cmr" text="(Requires game restart)" pos="0,2.75" pt="0.4" col="255,255,255,255" />
		<bgimage name="phones" img="phones" pos="-1.5,0.5" size="2,2" />
		<bgimage name="mic" img="mic" pos="1.5,0.55" size="2,2" />
		<bgimage name="pad" img="pad" pos="-1.5,-2.5" size="2,2" />
		<bgimage name="cam" img="cam" pos="1.5,-2.5" size="2,2" />
		<bgimage name="yesmic" img="yes" pos=".75,-.3" size="0.8,0.8" />
		<bgimage name="nomic" img="no" pos=".75,-.25" size="0.8,0.8" />
		<bgimage name="yespad" img="yes" pos="-2.25,-3.25" size="0.8,0.8" />
		<bgimage name="nopad" img="no" pos="-2.25,-3.25" size="0.8,0.8" />
		<bgimage name="yescam" img="yes" pos=".75,-3.25" size="0.8,0.8" />
		<bgimage name="nocam" img="no" pos=".75,-3.25" size="0.8,0.8" />
		<geom name="coverintro" col="0,0,0,0">
			<quad p1="-8, 6, 0" p2="8, 6, 0" p3="8, -6, 0" p4="-8, -6, 0" />
		</geom>
	</scene>
</hud>